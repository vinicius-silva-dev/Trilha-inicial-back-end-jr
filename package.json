{
  "name": "gerenciamento-de-tarefas",
  "version": "1.0.0",
  "description": "API para gerenciar tarefas.",
  "main": "app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "cross-env DATABASE_URL=${DATABASE_URL_SQLITE} prisma migrate dev --name init && node src/index.js",
    "migrate:dev": "cross-env DATABASE_URL=${DATABASE_URL_SQLITE} prisma migrate dev --name init",
    "generate:dev": "cross-env DATABASE_URL=${DATABASE_URL_SQLITE} prisma generate",
    "migrate:prod": "cross-env DATABASE_URL=${DATABASE_URL_POSTGRES} prisma migrate deploy",
    "generate:prod": "cross-env DATABASE_URL=${DATABASE_URL_POSTGRES} prisma generate",
    "start:prod": "cross-env DATABASE_URL=${DATABASE_URL_POSTGRES} node dist/index.js"
  },
  "keywords": [],
  "author": "Vinicius Silva Souza",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.19.1",
    "body-parser": "^1.20.2",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "bcrypt": "^5.1.1",
    "nodemon": "^3.1.4",
    "prisma": "^5.19.1"
  }
}
